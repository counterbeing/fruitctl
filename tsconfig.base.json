{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"outDir": "dist",
		"rootDir": "src",
		"paths": {
			"@fruitctl/core": ["./apps/core/src"],
			"@fruitctl/db": ["./packages/db/src"],
			"@fruitctl/shared": ["./packages/shared/src"],
			"@fruitctl/reminders": ["./packages/plugins/reminders/src"]
		}
	}
}
